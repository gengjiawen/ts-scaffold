{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "repository": {
    "url": "<%= username %>/<%= name %>",
    "type": "git"
  },
  "author": "<%= username %> <<%= email %>>",
  "scripts": {
    "start": "tsc -w",
    "server": "nodemon --ext ts --exec ts-node libs/index.ts",
    "clean": "rimraf build",
    "prettify": "prettier \"{examples,libs,script,test}/**/*.ts\" \"*.ts\" \"*.yml\" --write",
    "test": "jest",
    "build": "npm run clean && tsc -p ./tsconfig.json"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@types/node": "12.7.3",
    "@types/jest": "24.0.13",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.0",
    "rimraf": "2.6.3",
    "nodemon": "1.19.1",
    "jest": "24.8.0",
    "ts-jest": "24.0.2",
    "prettier": "1.18.2",
    "ts-node": "8.2.0",
    "typescript": "3.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css,html,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)(spec|test).(ts|tsx|js)",
      "**/__tests__/*.(ts|tsx|js)",
      "**/test/*.(ts|tsx|js)"
    ]
  }
}
