{
  "name": "{{ name }}",
  "version": "1.0.0",
  "description": "A typescript project",
  "author": "{{ author }}",
  "scripts": {
    "start": "nodemon --ext ts --exec ts-node index.ts",
    "clean": "rimraf build",
    "prettify": "prettier \"{examples,lib,script,test}/**/*.ts\" \"*.ts\" --write",
    "test": "jest",
    "build": "npm run clean && tsc -p ./tsconfig.json"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)",
      "**/test/*.(ts|tsx|js)"
    ]
  },
  "dependencies": {
  },
  "devDependencies": {
    "@types/node": "9.6.6",
    "@types/jest": "22.2.3",
    "rimraf": "2.6.2",
    "nodemon": "1.17.3",
    "jest": "22.4.3",
    "ts-jest": "22.4.4",
    "prettier": "1.12.1",
    "ts-node": "6.0.0",
    "typescript": "2.8.3"
  }
}
