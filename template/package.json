{
  "name": "<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "repository": {
    "url": "<%= username %>/<%= name %>",
    "type": "git"
  },
  "main": "build/index.js",
  "author": "<%= username %> <<%= email %>>",
  "scripts": {
    "start": "tsc -w",
    "server": "nodemon --exec ts-node libs/index.ts",
    "prepare": "husky install",
    "clean": "rimraf build",
    "format": "prettier --write \"{examples,libs,script,bin}/**/*.{js,ts}\" \"*.yml\"",
    "format:check": "prettier --list-different \"{examples,libs,script,bin}/**/*.{js,ts}\" \"*.yml\"",
    "test": "jest",
    "build": "npm run clean && tsc -p ./tsconfig.json"
  },
  "dependencies": {
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "16.7.1",
    "@types/jest": "27.0.1",
    "husky": "7.0.2",
    "lint-staged": "^11.1.2",
    "nodemon": "2.0.12",
    "rimraf": "3.0.2",
    "jest": "27.0.6",
    "ts-jest": "27.0.5",
    "prettier": "2.3.2",
    "typescript": "4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css,html,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
